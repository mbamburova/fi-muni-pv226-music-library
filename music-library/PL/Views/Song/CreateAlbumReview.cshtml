@model PL.Models.SongListViewModel

@{
    ViewBag.Title = "Create review of album";
}

<h2>Create review for album @Model.Album.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br/>

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.AlbumReviewDto.AlbumId)
        @Html.HiddenFor(model => model.Album.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.AlbumReviewDto.Name, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumReviewDto.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AlbumReviewDto.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumReviewDto.Rating, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumReviewDto.Rating, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AlbumReviewDto.Rating, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.AlbumReviewDto.Note, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumReviewDto.Note, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AlbumReviewDto.Note, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to album details", "Index")
</div>